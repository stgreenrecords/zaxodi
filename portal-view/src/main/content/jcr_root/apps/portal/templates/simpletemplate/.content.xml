<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:description="Template for initial or main page of the site."
    jcr:primaryType="cq:Template"
    jcr:title="PORTAL Simple Page"
    allowedPaths="[/content/portal(/.*)?]"
    ranking="{Long}100">
    <jcr:content
        jcr:primaryType="cq:PageContent"
        sling:resourceType="portal/pages/simplepage">
        <topnav
            jcr:primaryType="nt:unstructured"
            sling:resourceType="portal/components/structure/topnav"/>
        <catalognavigation
                jcr:primaryType="nt:unstructured"
                sling:resourceType="portal/components/catalog/catalogNavigation"/>
        <parsys
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/foundation/components/parsys">
        </parsys>
        <footer
                jcr:primaryType="nt:unstructured"
                sling:resourceType="portal/components/structure/footer"/>
    </jcr:content>
</jcr:root>
